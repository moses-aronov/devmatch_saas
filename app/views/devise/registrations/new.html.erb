<div class="row">
  <div class="col-md-5 col-md-offset-4 text-center">
    <% if params[:plan] == '2' %>
      <h1>Pro account</h1>
      <p>Sign up for the pro accounts for $10/month and get access to the community and contact information!</p>
    <% else %>
      <h1>Basic account</h1>
      <p>Sign up for free and get basic access to the community</p>
    <% end %>
  </div>
  
  
    <div class="col-md-5 col-md-offset-4 col-xs-7 col-xs-offset-3">
        <div class="well">
          <h2>Sign up</h2>
          <% if params[:plan] == '2'%>
            <%= render "pro_form" %>
          <% else %>
            <%= render "basic_form" %>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
    </div>
</div>     