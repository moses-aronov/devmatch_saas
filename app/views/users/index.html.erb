<div class="row">
    <h1>The Community</h1>
    <% @users.each do |user| %>
        <% if user.profile %>
            <% profile = user.profile %>
            <div class="col-sm-4">
                <div class="well community" link="users/<%= user.id %>">
                    <div class="row">
                        <div class="col-sm-5">
                             <% if profile.avatar %>
                                <%= (image_tag profile.avatar.url(:medium), :style => "width: 100%; height: 100%" if profile.avatar)%>
                            <%end %>
                        </div>
                        <div class="col-sm-7">
                            <h3><%= profile.first_name if profile.first_name %> <%= profile.last_name if profile.last_name %></h3>
                            <h4><%= profile.job_title if profile.job_title %></h4>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    <%end %>
</div>             