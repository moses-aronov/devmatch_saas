<div class="row">
    <div class="col-md-2">
        <div class="well profile-img">
            <%= image_tag @profile.avatar.url(:medium), :style => "width: 100%; height: 100%" %>
        </div>
    </div>
    <div class="col-md-10">
        <div class="well header">
            <h1><%= @profile.first_name %> <%= @profile.last_name %></h1>
        <h3><span class="job_title_icon"> <%= job_title_icon %></span> <%= @profile.job_title %></h3>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        <div class="well profile-description">
            <h3>Description</h3>
            <%= @profile.description %><br/>
        </div>
    </div>
    <% if current_user.plan_id == 2 %>
        <div class="col-md-3">
            <div class="well">
                <h3>Contact Information</h3>
                <%= @profile.phone_number %><br/>
                <%= @profile.contact_email %><br/>
            </div>
        </div>
    <%end%>
    
</div>




